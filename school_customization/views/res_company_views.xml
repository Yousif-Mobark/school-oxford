<odoo>
    <record id="view_company_form_school" model="ir.ui.view">
        <field name="name">res.company.form.school</field>
        <field name="model">res.company</field>
        <field name="priority">99</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='institute_detail']" position="after">
                <page name="products" string="Global Configuration">
                    <group>
                        <field name="transport_product_id" colspna="4" />
                        <field name="registration_product_id" colspna="4"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
</odoo>